            <Private>False</Private>
        </Reference>
        <Reference Include="Newtonsoft.Json, Version=11.0.0.0, Culture=neutral, PublicKeyToken=null">
            <HintPath>..\HKMPServer\Lib\Newtonsoft.Json.dll</HintPath>
